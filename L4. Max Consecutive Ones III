https://leetcode.com/problems/max-consecutive-ones-iii/description/

class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {
        int n=nums.size();
        int l=0,r=0;
        int ans=0;//maximum length
        int one=0,zero=0;
        while(r<n){
            if(nums[r]==0)zero++;
            else one++;
 
            while(zero>k){
                if(nums[l]==0){
                    zero--;
                }
                else one--;
                l++;

            }
            ans=max(ans,r-l+1);
            r++;
        }
        return ans;
    }
};
